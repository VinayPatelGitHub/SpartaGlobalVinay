<Window x:Class="Calculator_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_GUI"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid Margin="0,0,0,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="581*"/>
            <ColumnDefinition Width="219*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="UserInputText" HorizontalAlignment="Left" Margin="267,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" Height="30" TextChanged="UserInputText_TextChanged"/>
        <Label Content="Main Input" HorizontalAlignment="Left" Margin="296,45,0,0" VerticalAlignment="Top"/>
        <Label x:Name="OutputBox" Content="" HorizontalAlignment="Left" Margin="278,144,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Margin="483,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Height="30" TextChanged="Output_TextChanged" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
