        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_.core_radio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RadioButton Content="On/Off Switch" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <TextBox HorizontalAlignment="Left" Margin="353,240,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Slider HorizontalAlignment="Left" Margin="353,183,0,0" VerticalAlignment="Top" Width="120" ValueChanged="Slider_ValueChanged"/>

    </Grid>
</Window>
